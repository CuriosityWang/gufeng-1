<view class="window"><view class="syh-header-cate"><scroll-view class="syh-tab-title syh-center" scroll-x="true" id="syh-tab-title"><block wx:for="{{categories}}" wx:for-item="cate" wx:for-index="index" wx:key="index"><view class="{{[cateCurrentIndex==index?'syh-tab-current':'']}}" data-cateid="{{cate.cateId}}" data-index="{{index}}" data-event-opts="{{[['tap',[['tabChange',['$event']]]]]}}" bindtap="__e">{{cate.name}}</view></block></scroll-view></view><view class="syh-list"><block wx:for="{{artList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><navigator open-type="navigate" url="{{'../info/info?artid='+item.art_id}}"><view class="syh-list-all"><view class="syh-list-rank">{{index+1}}</view><view class="syh-list-img"><image src="{{item.art_content[0]}}" mode="widthFix"></image></view><view class="syh-list-information"><view class="syh-list-title">{{item.art_title}}</view><block wx:if="{{cateCurrentIndex=='0'}}"><view class="syh-list-browse">{{"浏览数："+item.art_browse}}</view></block><block wx:if="{{cateCurrentIndex=='1'}}"><view class="syh-list-browse">{{"点赞数："+item.art_agree}}</view></block><view class="syh-list-uface"><image src="{{item.u_face}}" mode="widthFix"></image></view><view class="syh-list-uid">{{item.u_name}}</view></view></view></navigator></block></block></view></view>